<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/contact_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:descendantFocusability="blocksDescendants">

    <TextView
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="start"
            android:text="@string/admin"
            android:textSize="@dimen/textDefaultMediumSize"
            android:layout_toStartOf="@id/checkbox"
            android:layout_marginStart="@dimen/margin_6dp"
            android:layout_toLeftOf="@id/checkbox"/>

    <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/groupName"
            android:layout_below="@id/groupName"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="@string/creatorXwiki"
            android:layout_alignStart="@id/groupName"/>

    <TextView
            android:id="@+id/lastModifiedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/checkbox"
            android:layout_alignTop="@id/version"
            android:text="@string/lastUpdateInfo"
            android:layout_marginRight="@dimen/marginMedium"
            android:layout_toLeftOf="@id/checkbox"
            android:layout_marginEnd="@dimen/marginMedium"/>

    <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_5dp"
            android:focusable="false"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>
